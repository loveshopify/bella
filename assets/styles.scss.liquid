    transition: opacity 0.2s linear;
  }

  .lazyload--fade-in.lazyloaded {
    opacity: 1;
  }

  img[data-sizes="auto"] {
    display: block;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  //Ensures that small images are not stretched larger
  .image__container {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .loading-wrap {
    position: relative;
  }

