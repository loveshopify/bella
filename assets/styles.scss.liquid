//Mega menu

.megaMenu {
  @include background-opacity({{ settings.dropdown_background_color }}, {% if settings.dropdown_transparency %}0.8{% else %}1{% endif %});
  box-sizing: border-box;
  border-top: 1px solid {{ settings.border_color }};
  position: absolute;
  display: none;
  width: calc(100% - 20px);
  z-index: 11;
  font-size: {{ settings.nav_font_size }}px;
  &:hover { display: block; }
  &.megaMenu-left .megaMenu-grid {
    @include prefix(transform, translateX(0%), ms webkit spec);
  }
  &.megaMenu-right .megaMenu-grid {
    @include prefix(transform, translateX(-100%), ms webkit spec);
  }

  @include respond-to('medium') {
    position: relative;
    padding: 0 40px 0 40px;
    border-top: 0;
    margin-bottom: 20px;
    width: 100%;
  }
}


li.megaMenu-dropdown:hover+.megaMenu,
